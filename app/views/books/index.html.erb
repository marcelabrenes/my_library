<p id="notice"><%= notice %></p>

<h1 class="text-center">My Books</h1>

<%= form_with url: "/books", method: :get, class: "form-inline" do |form| %>
 <div class="form-group mx-sm-3 mb-2">
  <%= form.label :query, "Status:" %>
   <%= form.select :status, [["In", :in], ["Out", :out]], {selected: params[:status]}, class:'form-control'%>
   </div>
  <%= form.submit "Search", class: 'btn btn-warning mb-2' %>
<% end %>
<br>

<table class="table">
  <thead class="bg-warning text-white">
    <tr>
     <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Status</th>
      <th scope="col">Check Out</th>
      <th scope="col">Check In</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <th scope="row"><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.checkout %></td>
        <td><%= book.checkin %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

